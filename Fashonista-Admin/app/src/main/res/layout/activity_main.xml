<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewSignup"
        android:layout_width="73dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="284dp"
        android:layout_height="57dp"
        android:layout_marginTop="72dp"
        android:fontFamily="cursive"
        android:text="Fashonista-Admin"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewSignup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="298dp"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSignup" />

    <EditText
        android:id="@+id/userNameSignup"
        android:layout_width="351dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/editbox_shape"
        android:ems="10"
        android:hint="Email id"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/tertiary_text_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2SignUp" />

    <EditText
        android:id="@+id/PasswordSignUp"
        android:layout_width="351dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/editbox_shape"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/tertiary_text_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameSignup" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="122dp"
        android:layout_height="43dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_shape"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSignUp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="7dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/loginSignUpActivity"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="16dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/loginSignUpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="SignUp"
        android:textColor="#021487"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3SignUp"
        android:onClick="Signup"/>

</androidx.constraintlayout.widget.ConstraintLayout>